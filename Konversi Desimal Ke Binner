#include <iostream>
using namespace std;
int main()
{
	cout << endl;
	cout << "==== KONVERSI ANGKA DESIMAL KE BINNER ====" << endl;
	cout << "==========================================" << endl;
	cout << endl;

	int a[10], n, i;

	cout << "MASUKAN ANGKA DESIMAL\t: ";
	cin >> n;

	for(i=0; n>0; i++){
    a[i] = n%2;
		n = n/2;
	}

	cout << "ANGKA BINNERNYA ADALAH\t: ";

  	for(i=i-1 ;i>=0 ;i--) {
	  cout << a[i];
  	}
  	cout << endl;
    return 0;
}
